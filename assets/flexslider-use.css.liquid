/* Browser Resets
*********************************/
.use-container a:active,
.flexslider2 a:active,
.use-container a:focus,
.flexslider2 a:focus  {outline: none;}
.slides,
.use-control-nav,
.use-direction-nav {margin: 0; padding: 0; list-style: none;}

/* Icon Fonts
*********************************/
/* Font-face Icons */
@font-face {
	font-family: 'flexslider-icon';
	src:url('flexslider-icon.eot');
	src:url('flexslider-icon.eot?#iefix') format('embedded-opentype'),
		url('flexslider-icon.woff') format('woff'),
		url('flexslider-icon.ttf') format('truetype'),
		url('flexslider-icon.svg#flexslider-icon') format('svg');
	font-weight: normal;
	font-style: normal;
}


#container {padding: 60px 40px 100px;}
#main {margin-left: 420px; margin-top: -25px;overflow: hidden;}

/* FlexSlider Necessary Styles
*********************************/
.flexslider2 {margin: 0; padding: 0;}
.flexslider2 .slides > li {display: none; -webkit-backface-visibility: hidden;} /* Hide the slides before the JS is loaded. Avoids image jumping */
/* .flexslider .slides img {width: 100%; display: block;} */
.use-pauseplay span {text-transform: capitalize;}

/* Clearfix for the .slides element */
.slides:after {content: "."; display: block; clear: both; visibility: hidden; line-height: 0; height: 0;}
html[xmlns] .slides {display: block;}
* html .slides {height: 1%;}

/* No JavaScript Fallback */
/* If you are not using another script, such as Modernizr, make sure you
 * include js that eliminates this class on page load */
.no-js .slides > li:first-child {display: block;}

/* FlexSlider Default Theme
*********************************/
.flexslider2 { margin: 0 0 60px; background: none; border: 0px solid #fff; position: relative; -webkit-border-radius: 4px; -moz-border-radius: 4px; -o-border-radius: 4px; border-radius: 4px;/*  -webkit-box-shadow: 0 1px 4px rgba(0,0,0,.2); -moz-box-shadow: 0 1px 4px rgba(0,0,0,.2); -o-box-shadow: 0 1px 4px rgba(0,0,0,.2); box-shadow: 0 1px 4px rgba(0,0,0,.2); */ zoom: 1; }
.use-viewport { max-height: 2000px; -webkit-transition: all 1s ease; -moz-transition: all 1s ease; -o-transition: all 1s ease; transition: all 1s ease; }
.loading .use-viewport { max-height: 300px; }
.flexslider2 .slides { zoom: 1; }
.carousel li { margin-right: 5px; }

/* Direction Nav */
.use-direction-nav {*height: 0;}
.use-direction-nav a  { text-decoration:none; display: block; width: 40px; height: 40px; margin: 15px 0 0; position: absolute; top: 30%; z-index: 10; overflow: hidden; opacity: 0.7; cursor: pointer; color: rgba(54,53,53,0.3); text-shadow: 1px 1px 0 rgba(255,255,255,0.3); /*-webkit-transition: all .3s ease; -moz-transition: all .3s ease; transition: all .3s ease;*/ }
.use-direction-nav .use-prev { left: -55px; }
.use-direction-nav .use-next { right: 100px; text-align: right; }
.flexslider2:hover .use-prev { opacity: 0.7; left: -55px; }
.flexslider2:hover .use-next { opacity: 0.7; right: 100px; }
.flexslider2:hover .use-next:hover, .flexslider2:hover .use-prev:hover { opacity: 1; }
.use-direction-nav .use-disabled { opacity: 0!important; filter:alpha(opacity=0); cursor: default; }
.use-direction-nav a:before  { font-family: "flexslider-icon"; font-size: 40px; line-height:1; display: inline-block; content: '\f001'; }
.use-direction-nav a.use-next:before  { content: '\f002'; }

/* Pause/Play
.use-pauseplay a { display: block; width: 20px; height: 20px; position: absolute; bottom: 5px; left: 10px; opacity: 0.8; z-index: 10; overflow: hidden; cursor: pointer; color: #000; }
.use-pauseplay a:before  { font-family: "flexslider-icon"; font-size: 20px; display: inline-block; content: '\f004'; }
.use-pauseplay a:hover  { opacity: 1; }
.use-pauseplay a.use-play:before { content: '\f003'; }

/* Control Nav */
.use-control-nav {width: 100%; position: absolute; bottom: -40px; text-align: center; display: none;}
.use-control-nav li {margin: 0 6px; display: inline-block; zoom: 1; *display: inline;}
.use-control-paging li a {width: 11px; height: 11px; display: block; background: #666; background: rgba(0,0,0,0.5); cursor: pointer; text-indent: -9999px; -webkit-border-radius: 20px; -moz-border-radius: 20px; -o-border-radius: 20px; border-radius: 20px; -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,0.3); -moz-box-shadow: inset 0 0 3px rgba(0,0,0,0.3); -o-box-shadow: inset 0 0 3px rgba(0,0,0,0.3); box-shadow: inset 0 0 3px rgba(0,0,0,0.3); }
.use-control-paging li a:hover { background: #333; background: rgba(0,0,0,0.7); }
.use-control-paging li a.use-active { background: #000; background: rgba(0,0,0,0.9); cursor: default; }

.use-control-thumbs {margin: 5px 0 0; position: static; overflow: hidden;}
.use-control-thumbs li {width: 25%; float: left; margin: 0;}
.use-control-thumbs img {width: 100%; display: block; opacity: .7; cursor: pointer;}
.use-control-thumbs img:hover {opacity: 1;}
.use-control-thumbs .use-active {opacity: 1; cursor: default;}

@media screen and (max-width: 860px) {
  .use-direction-nav .use-prev { opacity: 1; left: -55px;}
  .use-direction-nav .use-next { opacity: 1; right: 100px;}
}

@media screen and (max-width : 320px) {
  .flexslider2 { margin: 0 0 30px;}
}